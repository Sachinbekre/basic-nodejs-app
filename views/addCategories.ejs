<%- include('includes/header.ejs') %>

    <body>
        <%- include('includes/navigation.ejs') %>
            <main>
                <div class="container">
                    <h2><%= admin?'Edit Category':'Add Category' %> </h2>
                    <form method="POST" action="<%= admin?'/categories/add':'/categories/add' %>">
                        <div class="mb-3">
                            <label for="name" class="form-label">Category Name :</label>
                            <input type="text" class="form-control" name="name" 
                             value="<%= admin?category.name:'' %>">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description :</label>
                            <textarea class="form-control" name="description" rows="3"
                            ><%= admin?category.description:'' %></textarea>
                        </div>
                        <button class="btn btn-primary ms-2"><%= admin?'Edit Category':'Add Category' %></button>
                    </form>
                </div>
            </main>
    </body>
    <%- include('includes/footer.ejs') %>